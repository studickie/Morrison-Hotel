extends layout/index.pug

block headStyles 
    link(rel="stylesheet" href="/css/homePage.css")

block content
    //- Highlights Section
    section.page__section
        .section__head
            div
                h2 Trending Today
        .section__main
            div.scroller__container(data-role="smooth_scroller")
                ul.list--noStyle.scroller__list(data-role="scroll_list")
                    each ttl in highlights
                        li.scroller__item(data-role="scroll_item")
                            .highlight
                                .highlight__display
                                    .highlight__backdrop
                                        picture
                                            source(media="(max-width:639px)" srcset= ttl.backdropSm)
                                            source(media="(min-width:640px)" srcset= ttl.backdropLg)
                                            img(src= ttl.backdropLg alt= `backdrop graphic for '${ttl.title}'`)
                                    .highlight__poster
                                        picture
                                            source(media="(max-width: 639px)" srcset= ttl.posterSm)
                                            source(media="(min-width: 640px)" srcset= ttl.posterLg)
                                            img(src= ttl.posterLg alt=`poster art for '${ttl.title}'`)
                                .highlight__details
                                    span
                                        span= ttl.title
                                        span= ttl.releaseYear
                                a.highlight__anchor(href= `/title/${ttl.mediaType}/${ttl.tmdbId}`)
                .scroller__button.scroller__button--left
                    button(type="button" name="scroller_button_left" data-role='scroller_button_left' aria-label="scroll left") &#60;
                .scroller__button.scroller__button--right
                    button(type="button" name="scroller_button_right" data-role="scroller_button_right" aria-label="scroll right") &#62;

    //- New Titles
    section
        .section__head
            h2 New in Movies
        .posterGroup
            ul.list--noStyle
                each ptr in moviesNowPlaying
                    li
                        img(src= ptr.poster_path)
            h3 See now-playing movies

        .posterGroup
            ul.list--noStyle
                each ptr in moviesUpcoming
                    li
                        img(src= ptr.poster_path)
            h3 See upcoming movies

block scripts
    script(src="/js/smoothScroller.js" type="text/javascript")
    script(src="/js/movies.js" type="text/javascript")