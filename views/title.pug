extends layout/index.pug

block content
    include includes/videoModal.pug

    section
        .section__head
            .page__wrapper
                h2= title.title
                div
                    span= "(" + title.releaseYear + ")"
        .section__main
            .page__wrapper
                .title
                    div
                        .title__poster
                            picture
                                source(media="(max-width:639px)" srcset= title.posterSm)
                                source(media="(min-width:640px)" srcset= title.posterLg)
                                img(src= title.posterLg alt= `backdrop graphic for '${title.title}'`)
                        .title__meta.title__meta--displaySm
                            .title__metaItem
                                <i class="fas fa-film" aria-hidden="true"></i>
                                span(aria-label="Film runtime")= title.runtime + "min"
                    div
                        .title__summary
                            p= title.summary
                        .title__video
                            if video.key
                                .video__image
                                    img(src= title.backdropSm)
                                a(href="#" data-src= video.key id="ancr_modal_open")
